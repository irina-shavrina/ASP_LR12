@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IndexModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Index</title>
</head>
<body>
    <table>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Edit" asp-controller="Main" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <form asp-controller="Main" asp-action="Delete" method="post" asp-route-id="@item.Id">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        }
    </table>
    <p><a asp-action="Create" asp-controller="Main">Add user</a></p>
    <table >
        <tr><th>Name</th><th>Capitalization</th></tr>
        @foreach (var item in Model.Companies)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Capitalization</td>
            </tr>
        }
        </table>
</body>
</html>