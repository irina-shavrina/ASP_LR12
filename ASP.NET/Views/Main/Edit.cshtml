@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Phonk edit</title>
</head>
<body>
    <h2>Редагування користувача</h2>
    <form asp-action="edit" asp-controller="Main" asp-route-id="@Model.Id">
        <label asp-for="FirstName">FirstName</label><br />
        <input type="text" asp-for="FirstName" />
        <label asp-for="LastName">LastName</label><br />
        <input type="text" asp-for="LastName" />
        <label asp-for="Age">Age</label><br />
        <input type="number" asp-for="Age" />
        <input type="submit" value="Save"/>
    </form>
</body>
</html>